# PM Agent Environment Variables
# Copy this file to .env and fill in your values

# Required: Anthropic API key for Claude Agent SDK
ANTHROPIC_API_KEY=sk-ant-xxxxx

# Required: Parallel.ai API key for MCP tools
PARALLEL_API_KEY=your_parallel_api_key

# Required: Polymarket proxy URL (Cloudflare Worker)
POLYMARKET_PROXY_URL=https://your-proxy.your-subdomain.workers.dev

# Required: Secret for proxy authentication
PROXY_SECRET=your_proxy_secret

# Optional: Polymarket CLOB API credentials (for trading - not used in research)
# POLYMARKET_API_KEY=
# POLYMARKET_API_SECRET=
# POLYMARKET_PASSPHRASE=

# Optional: Override default agent settings
# DEFAULT_MODEL=claude-sonnet-4-20250514
# DEFAULT_MAX_BUDGET_USD=0.50
# DEFAULT_MAX_TURNS=30

# Optional: Data directory (default: ./data)
# DATA_DIR=./data

# Optional: Log level (debug, info, warn, error)
# LOG_LEVEL=info
